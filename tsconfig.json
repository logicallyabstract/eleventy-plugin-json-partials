{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "lib": ["ES2018"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  }
}
